<div class = "container mx-auto mb-5">

  <!--ログイン成功メッセージ-->
  <% if flash[:notice] %>
    <p class="notice alert alert-success"><%= flash[:notice] %></p>
  <% end %>
  <!--ログイン失敗メッセージ-->
  <% if flash[:alert] %>
    <p class="alert alert alert-danger"><%= flash[:alert] %></p>
  <% end %>

  <div class = "row">
    <div class = "col-12 col-lg-4 text-center text-lg-left">
    　<div>
      <!--<div><img src="/assets/icon1.jpg" alt=""></div>-->
      <%= image_tag asset_path("icon1.jpg") %>
        <h1>Ramen Collection</h1>
      </div>
      <div class ="mt-3">
        <%= link_to "投稿一覧へ", posts_path, class: "btn btn-light btnx-red-light rounded-pill" %>
      </div>
      <div class ="mt-3">
        <%= link_to "新規登録はこちら", new_customer_registration_path, class: "btn btn-light btnx-indigo-light rounded-pill" %>
      </div>
      <div class ="mt-3">
        <%= link_to "ログインはこちら", new_customer_session_path, class: "btn btn-light btnx-indigo-light rounded-pill" %>
      </div>
    </div>

    <div class = "col-12 col-lg-8 mt-5">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide"><%= image_tag asset_path("a.jpg") %></div>
          <div class="swiper-slide"><%= image_tag asset_path("b.jpg") %></div>
          <div class="swiper-slide"><%= image_tag asset_path("c.jpg") %></div>
        </div>
        <div class="swiper-pagination swiper-pagination-white"></div>
      </div>
    </div>
  </div>
</div>

<script src="swiper.js"></script>
<script>
       var swiper = new Swiper('.swiper-container', {
         loop: true,
  effect: 'fade',
  autoplay: {
    delay: 4000,
    disableOnInteraction: false,
  },
  speed: 2000,
  pagination: {
    el: '.swiper-pagination',
    clickable: true,
	}
});
</script>

