<h1>投稿一覧画面</h1>
<div class="container">
  <div class="row my-5">
    <div class='col-12 col-xl-10'>
      <h2>
        <strong>投稿一覧</strong>
      </h2>
    </div>
  </div>
      <div class="row">
        <% @posts.each do |post1| %>
          <div class="col-md-3">
              <div><strong>
                <div class="my-3"><%= attachment_image_tag product, :image, size: "200x150" %></div>
                <div><%= post1.shop_name %></div>
                <div>¥<%= post1.address %></div>
              </strong></div>
            <% end %>
          </div>
        <% end %>
      </div>
        <div>
          <strong><%= paginate  %></strong>
        </div>
    </div>

</div>