<body>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="row">
  	      <h2>投稿詳細</h2>
        </div>

        <div class="row">
          <div class="col">
        	  <%= "投稿ユーザー" %>
        	</div>
        	<div class="col">
        	  <% if @customer.profile_image.attached? %>
              <%= image_tag @customer.profile_image, class: "userimage" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
            <% end %>
        	  <%= @customer.name %>
        	</div>
        </div>

          <div class="my-3">
             <%# @post.post_image.each do |portrait| %>
              <%#= image_tag portrait.variant(resize_to_limit: [100, 100]) %>
            <%# end %>
            <%= image_tag @post.post_image, class: "postshowimage" %>
          </div>

        <div class="row border-bottom">
          <div class="col-4">
            <%= image_tag asset_path("shopimage.jpg"), class: 'headerimage' %>
          </div>
          <div class="col-8 mt-3">
            <h2><%= @post.shop_name %></h2>
          </div>
        </div>

　　　　<div class="row border-bottom">
          <div class="col-3 ms-4">
            <%= "住所" %>
          </div>
          <div class="col-8">
            <%= @post.address %>
          </div>
        </div>

　　　　<div class="row border-bottom">
          <div class="col-3 ms-4">
            <%= "スープの味" %>
          </div>
          <div class="col-8">
            <%= @post.taste %>
          </div>
        </div>

        <div class="row border-bottom">
          <div class="col-3 ms-4">
            <%= "麺の硬さ" %>
          </div>
          <div class="col-8">
            <%= @post.noodle_hardness %>
          </div>
        </div>

        <div class="row border-bottom">
          <div class="col-3 ms-4">
            <%= "口コミ" %>
          </div>
          <div class="col-8">
            <%= @post.introduction %>
          </div>
        </div>

        <div class="post-evaluation m-3" data-score="<%= @post.evaluation %>"></div>
        <div class="border-bottom"> 評価<%= @post.evaluation %>点</div>

        <div id="favorite_buttons_<%= @post.id %>">
　　　    <%= render "favorites/favorite", post: @post %>
　　    </div>





  </div>

      <div class="col-8 mt-5">
        <%= image_tag asset_path("mapicon.png"), class: 'headerimage' %>
        <h2>所在地</h2>
        <div id="map", class="map rounded-3"></div>
      </div>
      <div class="col-4">
        <div class="my-5">
      <%= form_with(model:[@post, @comment], local: true) do |f| %>
      <div class="input-group mb-3">
        <%= f.text_area :body, class: "form-control", size: "15x10" %>
        <%= f.hidden_field :post_id, value: @post.id %>

        <%= f.submit 'コメントする', class: "btn btn-success" %>
      </div>
      <% end %>

    </div>
      </div>
      <div class="col-8">
        <h1>クチコミ</h1>
        <% @comments.each do |comment| %>
        <div class="comment rounded-3 bg-light mb-4 shadow border border-1 border-light">
          <div class="row">
            <div class="col-1 m-3">
              <% if comment.customer.profile_image.attached? %>
                  <%= image_tag comment.customer.profile_image, class: "userimage_comment" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "100x100" %>
                <% end %>
            </div>
            <div class="col-4 mt-4">
              <%= comment.customer.name %>
            </div>
          </div>
          <div class="ms-5">
            <%= comment.body%>
          </div>
          <div class="text-end m-2">
            <%= link_to "削除", post_comment_path(@post, comment), method: :delete %>
          </div>
        </div>
        <% end %>
      </div>


    </div>
  </div>

</body>

<script>
  $('.post-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
  });
</script>


<!--グーグルマップ表示-->

<script type="text/javascript">
  function initMap() {
    var test ={lat: <%= @post.latitude %>, lng: <%= @post.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 15,
              center: test
              });
    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    var contentString = '住所：<%= @post.address %>';
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });


    var marker = new google.maps.Marker({
                  position:test,
                  map: map,
                  title: contentString
                 });

     marker.addListener('click', function() {
       infowindow.open(map, marker);
     });
  }
</script>


<script async defer
              src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
</script>
