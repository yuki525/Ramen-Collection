 <%= @customer.name %>
  	<h2>投稿詳細</h2>
      <div class="my-3"><%= image_tag @post.post_image.variant(resize:'300x300') %></div>
      <div><%= @post.shop_name %></div>
      <div><%= @post.introduction %></div>
      <div><%= @post.address %></div>
      <div><%= @post.taste %></div>
      <div><%= @post.noodle_hardness %></div>


<%= form_with(model:[@post, @comment], local: true) do |f| %>
  <%= f.text_area :body %>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.submit 'コメントする' %>
  <% end %>

  <% @comments.each do |comment| %>
  <%= comment.body %>
  <% end %>